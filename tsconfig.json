{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@todo-app/*": [
        "apps/todo-app/src/app/*",
        "apps/todo-app/src/*"
      ],
      "@todo/todo-app-lib": [
        "libs/todo-app-lib/src/index.ts"
      ],
      "@todo/shared/ui": [
        "libs/shared/ui/src/index.ts"
      ],
      "@todo/shared/data-access": [
        "libs/shared/data-access/src/index.ts"
      ],
      "@todo/shared/utils": [
        "libs/shared/utils/src/index.ts"
      ],
      "@todo/shared/styles": [
        "libs/shared/styles/src/index.ts"
      ]
    }
  }
}
